{
  "compilerOptions": {
    "noUnusedLocals": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom","es2017"],
    "sourceRoot": "./src",
    "inlineSources": true,
    "mapRoot": "./",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es6",
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
        "node",
        "core-js"
    ]
  }
}
