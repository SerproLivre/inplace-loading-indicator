{
  "name": "@pratico/build-script",
  "version": "0.0.0",
  "description": "Pratico Build Script - Builds pratico script (both pure common-js and cjs+umd)",
  "main": "index.js",
  "scripts": {
    "build": "ts-node src/main.ts build cjs; chmod +x dist/main.js",
    "test": "jest"
  },
  "bin": {
    "pratico": "./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/%40pratico-web/pratico-packages.git"
  },
  "keywords": [
    "pratico",
    "@pratico",
    "build-script",
    "build-npm-packages",
    "build-node-ts-projects"
  ],
  "author": "Abner Oliveira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/%40pratico-web/pratico-packages/issues"
  },
  "homepage": "https://github.com/%40pratico-web/pratico-packages#readme",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.9.0",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^7.0.14",
    "@types/shelljs": "^0.7.0",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.13",
    "ts-node": "^3.0.2",
    "typescript": "^2.3.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "@angular/compiler-cli": "^4.1.0",
    "chalk": "^1.1.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "tslint": "^5.1.0"
  }
}
