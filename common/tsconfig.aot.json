{
  "compilerOptions": {
    "noUnusedLocals": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "inlineSources": true,
    "sourceMap": true,
    "rootDir": "./",
    "sourceRoot": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist",
     "skipLibCheck": true,
    "target": "es2015",
    "typeRoots": [
      "../node_modules/@types"
    ]

  },
  "exclude": [
    "./*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../dist",
    "skipMetadataEmit": true,
    "strictMetadataEmit": true
  }
}
