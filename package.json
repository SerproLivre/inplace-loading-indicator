{
  "name": "ngx-pratico",
  "version": "1.0.0",
  "description": "Ngx Pratico - General purpose components and services => { where x >= 2 }",
  "main": "dist/index.js",
  "scripts": {
    "pratico:build": "node common/pratico-build.js build",
    "test": "cross-env NODE_ENV=test UNIT_TESTS=true jest --watchAll",
    "test:it": "cross-env INTEGRATION_TESTS=true yarn test",
    "ci": "yarn lint && cross-env NODE_ENV=test jest --coverage",
    "build": "webpack --progress",
    "lint": "tslint --config tslint.json 'src/**/*.ts' 'sample-app/app/**/*.ts'  -e 'src/monaco.d.ts'",
    "prepublish": "npm run lint && npm run compile",
    "compile": "rimraf dist && ngc -p src/tsconfig.aot.json && rimraf dist/node_modules && webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/abner/ngx-pratico.git"
  },
  "keywords": [
    "angular",
    "fast",
    "pratico",
    "generic-ui",
    "generic-services"
  ],
  "author": "Abner Oliveira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abner/ngx-pratico/issues"
  },
  "homepage": "https://github.com/abner/ngx-pratico#readme",
  "dependencies": {
    "lodash.isempty": "^4.4.0",
    "monaco-editor": "^0.8.3",
    "parse-css-dimension": "^1.1.0"
  },
  "peerDependencies": {
    "@angular/common": "^2.3.0",
    "@angular/core": "^2.3.0",
    "@angular/platform-browser": "^2.3.0",
    "rxjs": "5.0.1"
  },
  "devDependencies": {
    "@angular/animations": "^4.0.3",
    "@angular/common": "^4.0.2",
    "@angular/compiler": "^4.0.2",
    "@angular/compiler-cli": "^4.0.2",
    "@angular/core": "^4.0.2",
    "@angular/forms": "^4.0.3",
    "@angular/http": "^4.0.3",
    "@angular/material": "^2.0.0-beta.3",
    "@angular/platform-browser": "^4.0.2",
    "@angular/platform-browser-dynamic": "^4.0.2",
    "@angular/router": "^4.0.3",
    "@ngtools/webpack": "^1.3.0",
    "@types/jasmine": "^2.5.47",
    "@types/lodash.isempty": "^4.4.2",
    "@types/node": "^7.0.13",
    "@types/shelljs": "^0.7.0",
    "@types/webpack": "^2.2.15",
    "awesome-typescript-loader": "^3.1.2",
    "codelyzer": "^2.1.1",
    "concurrently": "^3.4.0",
    "cpx": "^1.5.0",
    "cross-env": "^4.0.0",
    "file-loader": "^0.11.1",
    "image-webpack-loader": "^3.3.0",
    "jest": "^19.0.2",
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.2",
    "raw-loader": "^0.5.1",
    "require-hacker": "^3.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rxjs": "^5.0.1",
    "shelljs": "^0.7.7",
    "sorcery": "^0.10.0",
    "svg-url-loader": "^2.0.2",
    "template-js": "^1.0.10",
    "ts-jest": "^19.0.10",
    "ts-node": "^3.0.2",
    "tslint": "~4.5",
    "typescript": "^2.2.2",
    "uglifyjs": "^2.4.10",
    "webpack": "^2.4.1",
    "webpack-node-externals": "^1.5.4",
    "zone.js": "0.8.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "svg"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!src/**/*.svg",
      "!src/**/*.sketch.ts",
      "!src/**/index.ts",
      "!src/**/*.module.ts",
      "!**/node_modules"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "html",
      "text"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest.ts",
    "transform": {
      "\\.(svg)$": "<rootDir>/test/svg-file-transformer.js",
      "^.+\\.(ts|tsx|js|html)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "verbose": true,
    "testRegex": ".*\\.spec\\.(ts)$"
  }
}
